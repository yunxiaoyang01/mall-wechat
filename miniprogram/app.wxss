@import "./styles/iconfont.wxss";



/*
    主题颜色，通过变量实现
    1 less中存在变量这个只是
    2 原生的css 和wxss 也是支持 变量
*/
page {
    /* 定义主题颜色*/
    --themeColor: #eb4450;
    /* 定义统一字体大小，假设设计稿的大小是375px 1px=2rpx 14px=28rpx */
    font-size: 28rpx;

}

page,
view,
text,
swiper,
swiper-item,
image,
navigator {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}